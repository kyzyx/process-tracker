<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ilogues.ed.processtracker.Main2Activity"
    tools:showIn="@layout/activity_main2">

    <fragment
        android:id="@+id/processview1"
        android:name="com.ilogues.ed.processtracker.ProcessViewFragment"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/processview2" />

    <fragment
        android:id="@+id/processview2"
        android:name="com.ilogues.ed.processtracker.ProcessViewFragment"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="2"
        app:layout_constraintBottom_toTopOf="@+id/processview1"
        app:layout_constraintTop_toBottomOf="@+id/processview3" />

    <fragment
        android:id="@+id/processview3"
        android:name="com.ilogues.ed.processtracker.ProcessViewFragment"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="2"
        app:layout_constraintBottom_toTopOf="@+id/processview2"
        app:layout_constraintTop_toBottomOf="@+id/processview4" />

    <fragment
        android:id="@+id/processview4"
        android:name="com.ilogues.ed.processtracker.ProcessViewFragment"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="2"
        app:layout_constraintBottom_toTopOf="@+id/processview3"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>
